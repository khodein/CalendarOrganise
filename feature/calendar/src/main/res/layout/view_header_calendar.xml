<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:paddingVertical="20dp"
    tools:context="ru.calendar.feature.calendar.ui.header.HeaderCalendarItemView"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <ru.calendar.core.uikit.text.TextItemView
        android:id="@+id/headerCalendarMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_arrow_down"
        android:drawablePadding="5dp"
        android:gravity="center|start"
        android:textAlignment="gravity"
        android:includeFontPadding="false"
        android:textAppearance="@style/Bold.20"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="January 2024" />

    <ru.calendar.core.uikit.button_icon.ButtonIconView
        android:id="@+id/headerCalendarExcluded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/headerCalendarAdded"
        app:layout_constraintTop_toTopOf="parent" />

    <ru.calendar.core.uikit.button_icon.ButtonIconView
        android:id="@+id/headerCalendarAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</merge>