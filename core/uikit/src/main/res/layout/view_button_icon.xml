<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/buttonIconContainer"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    tools:context="ru.calendar.core.uikit.button_icon.ButtonIconView">

    <FrameLayout
        android:id="@+id/buttonIconContentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ru.calendar.core.uikit.image.ImageItemView
            android:id="@+id/buttonIconContent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            tools:src="@tools:sample/avatars" />

    </FrameLayout>

</merge>